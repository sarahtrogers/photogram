<%= search_form_for @q, :class => collapse_search_form, :id => "users_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :username_cont, "Username contains" %>
    <%= f.text_field :username_cont, :class => "form-control", :placeholder => "Username contains" %>
  </div>

  <div class="form-group">
    <%= f.label :following_count, "Following count" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :following_count_gteq, :class => "form-control", :placeholder => "Following count greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :following_count_lteq, :class => "form-control", :placeholder => "Following count less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :followers_count, "Followers count" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :followers_count_gteq, :class => "form-control", :placeholder => "Followers count greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :followers_count_lteq, :class => "form-control", :placeholder => "Followers count less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :posts_count, "Posts count" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :posts_count_gteq, :class => "form-control", :placeholder => "Posts count greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :posts_count_lteq, :class => "form-control", :placeholder => "Posts count less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email_cont, "Email contains" %>
    <%= f.text_field :email_cont, :class => "form-control", :placeholder => "Email contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :created_at, "Post Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='postsgteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :posts_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Post Created at greater than or equal to", :data => {:target => '#postsgteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#postsgteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='postslteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :posts_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Post Created at less than or equal to", :data => {:target => '#postslteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#postslteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#postsgteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#postslteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#postsgteqcreated_atPicker').on("dp.change", function (e) {
              $('#postslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#postslteqcreated_atPicker').on("dp.change", function (e) {
              $('#postsgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :comments_comment_cont, "Comments comment contains" %>
    <%= f.text_field :comments_comment_cont, :class => "form-control", :placeholder => "Comments comment contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/users" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#users_filters">
  Show filters
</a>
