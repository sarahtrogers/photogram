<!-- Form like start -->
<%= form_with(model: @like, local: true) do |f| %>
<!-- Form like end -->

  <!-- Label and input for post_id start -->
  <div class="form-group">
    <%= f.label :post_id %>

    <!-- Input for post_id start -->
    <%= f.text_field :post_id, class: "form-control" %>
    <!-- Input for post_id end -->
  </div>
  <!-- Label and input for post_id end -->

  <!-- Label and input for user_id start -->
  <!-- Input for user_id start -->
  <%= f.hidden_field :user_id, value: @user.id %>
  <!-- Input for user_id end -->
  <!-- Label and input for user_id end -->

  <%= f.submit "Create like", class: "btn btn-block btn-outline-secondary" %>
<% end %>
